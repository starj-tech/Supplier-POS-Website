# Allow access to uploaded images
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
</IfModule>

# Only allow image files
<FilesMatch "\.(?i:jpe?g|png|gif|webp)$">
    Allow from all
</FilesMatch>

# Block PHP execution in uploads folder for security
<FilesMatch "\.php$">
    Deny from all
</FilesMatch>
